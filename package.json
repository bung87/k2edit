{
  "name": "ai-context-assistant",
  "displayName": "AI Context Assistant",
  "description": "Add files to AI assistant context via explorer",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": ["Other"],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "aiContext.addToContext",
        "title": "Add to AI Context",
        "icon": "$(add)"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "aiContext.addToContext",
          "when": "explorerResourceIsFolder == false",
          "group": "2_aiContext@1"
        }
      ],
      "view/title": [
        {
          "command": "aiContext.addToContext",
          "when": "view == workbench.explorer.fileView",
          "group": "navigation"
        }
      ]
    },
    "views": {
      "explorer": [
        {
          "id": "aiContextView",
          "name": "AI Context",
          "when": "false"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "typescript": "^4.9.4"
  }
}