/* AI Panel Styles */
#ai-panel {
    dock: bottom;
    height: 8;
    box-sizing: border-box;
    background: #1e293b;
    border: solid #3b82f6;
    layout: horizontal;
    align: left middle;
    padding: 0;
    margin: 0;
}

/* Selector Container Styles */
#selector-container {
    width: 18;
    min-width: 16;
    height: 8;

    padding: 0;
    margin: 0;
    box-sizing: border-box;
    border: none;
}

/* AI Model Selector Styles */
AIModelSelector {
    width: 100%;
    height: 1fr;
    min-height: 2;
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

AIModelSelector SelectCurrent {
    background: #1e293b;
    color: #f1f5f9;
    border: solid #475569;
    padding: 0 1;
    height: auto;
    min-height: 1;
    text-style: dim;
    box-sizing: border-box;
}

AIModelSelector SelectCurrent:focus {
    border: solid #3b82f6;
    background-tint: #f1f5f9 5%;
}

AIModelSelector SelectCurrent Static#label {
    color: #f1f5f9;
    background: transparent;
    text-style: dim;
    height: 1;
}

AIModeSelector {
    width: 100%;
    height: 1fr;
    min-height: 2;
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

AIModeSelector SelectCurrent {
    background: #1e293b;
    color: #f1f5f9;
    border: solid #475569;
    padding: 0 1;
    height: auto;
    min-height: 1;
    text-style: dim;
    box-sizing: border-box;
}

AIModeSelector SelectCurrent:focus {
    border: solid #3b82f6;
    background-tint: #f1f5f9 5%;
}

AIModeSelector SelectCurrent Static#label {
    color: #f1f5f9;
    background: transparent;
    text-style: dim;
    height: 1;
}


/* Terminal Panel Styles */
TerminalPanel {
    dock: bottom;
    height: 30%;
    min-height: 10;
    max-height: 80%;
    border: solid #3b82f6;
    background: #1e293b;
    display: none;
}

TerminalPanel:focus {
    border: solid #10b981;
}

#terminal-container {
    height: 100%;
    background: #1e293b;
}

#terminal-title {
    dock: top;
    height: 1;
    background: #3b82f6;
    color: #f1f5f9;
    text-align: center;
    padding: 0 1;
    text-style: bold;
}

#terminal-output {
    background: #0f172a;
    color: #f1f5f9;
    border: none;
    padding: 1;
    overflow-y: auto;
    overflow-x: auto;
    scrollbar-background: #1e293b;
    scrollbar-color: #3b82f6;
    scrollbar-corner-color: #1e293b;
}

#terminal-output:focus {
    border: none;
}

/* Terminal text styling */
.terminal-input {
    color: #10b981;
}

.terminal-output {
    color: #f1f5f9;
}

.terminal-error {
    color: #ef4444;
}

.terminal-prompt {
    color: #3b82f6;
    text-style: bold;
}

/* Main content area styles */
#main-content {
    height: 1fr;
    overflow: hidden;
}


/* Command Bar Styles */
CommandBar {
    height: 6;
    min-height: 3;
    width: 1fr;
    border: solid #3b82f6;
    background: #1e293b;
    color: #f1f5f9;
    padding: 0;
    margin: 0 1;
    box-sizing: border-box;
}

